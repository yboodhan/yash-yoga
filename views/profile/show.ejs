<h1><%= user.username %>'s Profile</h1>

<hr>

<div class="row">
    <div class="col-5">
        <img class="img-fluid profile" alt="user image" src="<%= user.photoUrl %>">
        <br>
        <hr>
    </div>
    <div class="col-7 left-align">
        <h2>Full name: <%= user.firstname %> <%= user.lastname %></h2>
        <h4><strong>Admin Status:</strong> <%= user.admin ? 'Yes' : 'No' %></h4>
        <hr>
        <h4>Bio: <%= user.bio %></h4>
        <hr>
        <h4>Email: <%= user.email %></h4>

    </div>
</div>

<hr>

<div class="row">
    <div class="col-6 container">
        <h2><strong><%= user.username %>'s Routines: <span class="badge badge-pill badge-light"><%= user.routines.length %></span></strong></h2>
        <div class="scroll-panel">
            <% user.routines.forEach( (routine) => { %>
                <div class="user-cards container">
                    <h4><%= routine.name %></h4>
                    <p><%= moment(routine.createdAt).calendar() %></p>
                    <% if (routine.private == false) { %>
                        <div class="routine_buttons">
                            <a href="/routines/<%= routine.id %>"><button>View</button></a>
                        </div>
                    <% } else { %>
                        <div class="routine_buttons">
                            <button><i class="fa fa-lock"></i></button>
                        </div>
                    <% } %>
                </div>
            <% }) %>
        </div>
    </div>
</div>