<div class="quote">
    <h1>Daily Dose Of Inspiration:</h1>
    <h3>"<%= quote.quote %>"</h3>
    <% if (quote.author) { %>
        <h4 class="float-right">- <%= quote.author %></h4>
    <% } else { %>
    <h4 class="float-right">- Anonymous</h4>
    <% } %>
    <br>
    <hr>

    <div class="row">
        
        <div class="col s3">
            <h4><strong>Other Devotees:</strong></h4>
            <div class="user-panel">
                <% users.forEach ( user => { %> 
                    <div class="user-cards">
                        <h5><strong><%= user.username %></strong></h5>
                        <h6>Devotee since: <%= moment(user.createdAt).calendar() %></h6>
                        <p class="text-truncate"><%= user.bio %></p>
                    </div>
                <% }) %>
            </div>
        </div>

        <div class="col s5">
            <% users.forEach ( user => { %> 
                <div class="box">
                    <%= user.firstname %> <%= user.lastname %>
                </div>
            <% }) %>
        </div>
        <div class="col s5">
            <% users.forEach ( user => { %> 
                <div class="box">
                    <%= user.firstname %> <%= user.lastname %>
                </div>
            <% }) %>
        </div>
    </div>
</div>