<div class="quote">
    <h1>Daily Dose Of Inspiration:</h1>
    <h2>"<%= quote.quoteText %>"</h2>
    <% if (quote.authorAuthor) { %>
        <h4 class="float-right">- <%= quote.authorAuthor %></h4>
    <% } else { %>
    <h4 class="float-right">- Anonymous</h4>
    <br>
    <% } %>
</div>

<br>
<br> 

<div class="row">
    <div class="col-3">
        <h4><strong>Other Devotees:</strong></h4>
        <hr>
        <div class="scroll-panel">
            <% users.forEach ( user => { %> 
                <% if (user.id != currentUser.id) { %>
                    <div class="user-cards container">
                        <img alt="user picture" src="<%= user.photoUrl %>" height="70" class="float-left user-photo">
                        <div class="left-align">
                            <a href="/profile/<%= user.id %>" class="text-danger">
                                <h5><strong><%= user.username %></strong></h5>
                            </a>
                            <h6>Devotee since: <%= moment(user.createdAt).calendar() %></h6>
                            <p class="text-truncate"><%= user.bio %></p>
                        </div>
                    </div>
                <% } %>
            <% }) %>
        </div>
    </div>

    <div class="col-3">
        <h4><strong>Public Routines:</strong></h4>
        <hr>
        <div class="scroll-panel">
            <% publicRoutines.forEach( (routine) => { %>
                <div class="user-cards container">
                    <h4><%= routine.name %></h4>
                    <% users.forEach ( user => { %> 
                        <% if (user.id == routine.userId) { %>
                            <p>Created by: <span><a href="/profile/<%= user.id %>" class="text-danger"><%= user.username %></a></span></p>
                        <% } %>
                    <% }) %>
                    <p><%= moment(routine.createdAt).calendar() %></p>
                    <p>Music: <%= routine.music %> <i class="fa fa-music"></i></p>
                    
                    <div class="routine_buttons">
                        <a href="/routines/<%= routine.id %>"><button>View</button></a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    <div class="col-6">
        <h4><strong>Chat:</strong></h4>
        <hr>
        <div>
            Chat here.
        </div>
    </div>
</div>