<h1><%= entry.title %></h1>
<h3><%= moment(entry.createdAt).format('l') %></h3>

<hr>

<div class="container scroll-panel">
    <h4 class="text-left"><%= entry.content %></h4>
</div>

<hr>
<div>
    <a href="/journal/edit/<%= entry.id %>"><button>Edit</button></a>
    <form action="/journal/<%= entry.id %>/?_method=DELETE" method="POST">
        <button type="submit" class="bg-danger">Delete</button>
    </form>
</div>